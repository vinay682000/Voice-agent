# Voice Agent - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Azure OpenAI Configuration (Required)
# ===========================================

# Your Azure OpenAI resource endpoint (Sweden Central or East US 2)
# Example: https://openai-realtime-sweden.openai.azure.com/
AZURE_OPENAI_ENDPOINT = "https://your-resource-name.openai.azure.com/"

# API Key from Azure Portal -> Your Resource -> Keys and Endpoint
AZURE_OPENAI_API_KEY = "your_api_key_here"

# Deployment name from Azure AI Foundry -> Deployments
# Usually: gpt-realtime or gpt-realtime-mini
AZURE_OPENAI_DEPLOYMENT_NAME = "gpt-realtime"
